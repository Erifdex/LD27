<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="LD27" package="net.erifdex.ld27" version="1.0.0" company="" />

 	<app file="Main" main="Main" path="bin" />

	<window fps="60" background="0xdfefd7" />

	<window width="640" height="480" resizable="true" unless="mobile" />

	<window fullscreen="true" if="mobile" />
	<window orientation="portrait" vsync="true" antialiasing="0" if="cpp" />

	<source path="src" />

	<haxelib name="openfl" />
	<haxelib name="HaxePunk" />
	<haxelib name="actuate" />

	<assets path="assets/graphics" rename="gfx" include="*.png|*.jpg" />
	<assets path="assets/audio" rename="sfx" include="*.mp3" if="flash" />
	<assets path="assets/audio" rename="sfx" include="*.wav|*.ogg" unless="flash" />
	<assets path="assets/font" rename="font" include="*.ttf" />
	<assets path="assets/data" rename="data" include="*.txt|*.json" />

	<icon path="assets/HaxePunk.svg" />
</project>
